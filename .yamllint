---
extends: default

rules:
  # 80 chars should be enough, but don't fail if a line is longer
  line-length:
    max: 200
    level: warning
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 2
  indentation:
    spaces: consistent
    indent-sequences: whatever
    check-multi-line-strings: false
